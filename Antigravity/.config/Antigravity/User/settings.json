{
  "workbench.colorCustomizations": {
    "[Kanagawa]": {
      "tab.border": "#928962",
      "panel.border": "#928962",
      "terminal.border": "#928962",
      "editorGroup.border": "#928962",
      "editorInfo.border": "#928962",
      "sideBar.border": "#928962"
    },
    "[Tokyo Night]": {
      "tab.border": "#627792",
      "panel.border": "#627792",
      "terminal.border": "#627792",
      "editorGroup.border": "#627792",
      "editorInfo.border": "#627792",
      "sideBar.border": "#627792",
      "editor.selectionBackground": "#313c4eff",
      "list.hoverBackground": "#313c4eff"
    }
  },
  "editor.tokenColorCustomizations": {
    "[Tokyo Night]": {
      "comments": "#627792"
    }
  },
  "workbench.colorTheme": "Quiet Light",
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontLigatures": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "terminal.integrated.commandsToSkipShell": [
    "language-julia.interrupt"
  ],
  "[python]": {
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.defaultColorDecorators": "never",
    "editor.wordBasedSuggestions": "off",
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 500,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnType": true,
    "editor.formatOnSave": true
  },
  "black-formatter.args": [
    "--line-length",
    "90"
  ],
  "flake8.args": [
    "--max-line-length=90",
    "--ignore=F841"
  ],
  "[julia]": {
    "editor.defaultColorDecorators": "never",
    "editor.quickSuggestions": {
      "other": "on",
      "comments": "off",
      "strings": "off"
    },
    "editor.wordSeparators": "`~#$%^&*()-=+[{]}\\|;:'\",.<>/?",
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 500,
    "editor.defaultFormatter": "julialang.language-julia",
    "editor.unicodeHighlight.ambiguousCharacters": false
  },
  "[latex]": {
    "editor.formatOnPaste": false,
    "editor.suggestSelection": "recentlyUsedByPrefix",
    "editor.unicodeHighlight.ambiguousCharacters": false
  },
  "julia.symbolCacheDownload": true,
  "julia.cellDelimiters": [
    "^\\s?#\\s#+",
    "^##(?!#)",
    "^#(\\s?)%%",
    "^#-",
    "^# %%"
  ],
  "julia.lint.constif": false,
  "julia.enableCrashReporter": true,
  "julia.enableTelemetry": true,
  "julia.execution.codeInREPL": true,
  "julia-format.flag": "style=DefaultStyle(), indent=4, margin=120, always_for_in=true, for_in_replacement=\"âˆˆ\", whitespace_typedefs=true, import_to_using=true, whitespace_in_kwargs=true, align_struct_field=true, align_assignment=true, align_conditional=true, align_pair_arrow=true, normalize_line_endings=\"unix\", align_matrix=true, join_lines_based_on_source=true, indent_submodule=true, surround_whereop_typeparameters=false, yas_style_nesting=true",
  "editor.lineHeight": 1.7,
  "color-highlight.markerType": "dot-before",
  "editor.minimap.enabled": false,
  "git.autofetch": true,
  "editor.formatOnSave": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "cSpell.language": "en,pt,pt_BR",
  "workbench.preferredDarkColorTheme": "Tokyo Night",
  "explorer.confirmDragAndDrop": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.matchBrackets": "always",
  "editor.fontSize": 16,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "git.openRepositoryInParentFolders": "always",
  "workbench.startupEditor": "none",
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": true
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": true
    },
    {
      "tag": "*",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],
  "cSpell.customDictionaries": {
    "custom-dictionary-user": {
      "name": "custom-dictionary-user",
      "path": "~/.cspell/custom-dictionary-user.txt",
      "addWords": true,
      "scope": "user"
    }
  },
  "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono",
  "explorer.confirmDelete": false,
  "jupyter.interactiveWindow.creationMode": "perFile",
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk",
      "tools": [
        "latexmk"
      ]
    },
    {
      "name": "latexmk (latexmkrc)",
      "tools": [
        "latexmk_rconly"
      ]
    },
    {
      "name": "latexmk (lualatex)",
      "tools": [
        "lualatexmk"
      ]
    },
    {
      "name": "latexmk (xelatex)",
      "tools": [
        "xelatexmk"
      ]
    },
    {
      "name": "pdflatex -> bibtex -> pdflatex * 2",
      "tools": [
        "pdflatex",
        "bibtex",
        "pdflatex",
        "pdflatex"
      ]
    },
    {
      "name": "Compile Rnw files",
      "tools": [
        "rnw2tex",
        "latexmk"
      ]
    },
    {
      "name": "Compile Jnw files",
      "tools": [
        "jnw2tex",
        "latexmk"
      ]
    },
    {
      "name": "Compile Pnw files",
      "tools": [
        "pnw2tex",
        "latexmk"
      ]
    },
    {
      "name": "tectonic",
      "tools": [
        "tectonic"
      ]
    }
  ],
  "latex-workshop.view.pdf.viewer": "external",
  "latex-workshop.view.pdf.external.viewer.command": "",
  "latex-workshop.view.pdf.external.synctex.args": [
    "--synctex-forward",
    "%l:1:%f",
    "%p"
  ],
  "latex-workshop.synctex.afterBuild.enabled": true,
  "editor.wrapOnEscapedLineFeeds": true,
}