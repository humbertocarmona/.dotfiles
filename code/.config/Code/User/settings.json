{
    "cSpell.language": "en,pt-BR",
    "cSpell.enableFiletypes": [
        "bibtex",
        "cmake",
        "csv",
        "fish",
        "julia",
        "juliamarkdown",
        "lua",
        "xml"
    ],
    "editor.fontFamily": "Inconsolata Nerd Font Mono",
    "editor.lineHeight": 1.4,
    "editor.minimap.enabled": false,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.fontLigatures": true,
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/*.insyncdl": true
    },
    "git.autofetch": true,
    "git.confirmSync": false,
    "julia.execution.resultType": "inline, errors in REPL",
    "julia.lint.call": false,
    "[julia]": {
        "editor.defaultFormatter": "0h7z.vscode-julia-format"
    },
    "julia.symbolCacheDownload": true,
    "julia.enableTelemetry": false,
    "ruff.path": [
        "/usr/local/bin/ruff"
    ],
    "julia-format.flag": "style=DefaultStyle(), indent=4, margin=92, always_for_in=true, for_in_replacement=\"âˆˆ\", whitespace_typedefs=true, import_to_using=true, align_struct_field=true, align_assignment=true, align_conditional=true, align_pair_arrow=true, normalize_line_endings=\"unix\", align_matrix=true, join_lines_based_on_source=true, indent_submodule=true, surround_whereop_typeparameters=false, remove_extra_newlines=true",
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt"
    ],
    "cSpell.customDictionaries": {
        "custom-dictionary-user": {
            "name": "en.utf-8.add",
            "path": "~/.cspell/en.utf-8.add",
            "addWords": true,
            "scope": "user"
        }
    },
    "git.openRepositoryInParentFolders": "always",
    "rewrap.autoWrap.enabled": true,
    "editor.wordWrapColumn": 82,
    "latex-workshop.latex.recipes": [
		{
			"name": "latexmk (lualatex)",
			"tools": [
				"lualatexmk"
			]
		},
		{
			"name": "latexmk",
			"tools": [
				"latexmk"
			]
		},
		{
			"name": "latexmk (xelatex)",
			"tools": [
				"xelatexmk"
			]
		},
		{
			"name": "pdflatex -> bibtex -> pdflatex * 2",
			"tools": [
				"pdflatex",
				"bibtex",
				"pdflatex",
				"pdflatex"
			]
		},
	],
	"latex-workshop.linting.chktex.enabled": true,
    "latex-workshop.latexindent.args": [
        "-c",
        "%DIR%/",
        "%TMPFILE%",
        "-y=defaultIndent: '%INDENT%'"
    ],
    "latex-workshop.latex.autoBuild.run": "onSave",
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "workbench.colorTheme": "GitHub Dark Default",
    "workbench.colorCustomizations": {
    },
    "terminal.integrated.cursorStyle": "underline",
    "editor.fontSize": 18,
    "terminal.integrated.fontSize": 16,
    "terminal.explorerKind": "external",
    "notebook.output.fontFamily": "Inconsolata Nerd Font Mono",
    "notebook.output.fontSize": 14,
    "latex-workshop.linting.chktex.exec.args": [
        "-wall",
        "-n22",
        "-n30",
        "-e16",
        "-q",
        "-n21",
        "-n1",
        "-n19"
    ],
    "vim.enableNeovim": true,
    "vim.neovimConfigPath": "~/.config/nvim/init.lua",
    "vim.camelCaseMotion.enable": true,
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.normal": "block",
    "vim.neovimPath": "/usr/bin/nvim",
    "vim.neovimUseConfigFile": true,
    "latex-workshop.intellisense.citation.backend": "biblatex",
    "latex-workshop.kpsewhich.enabled": true,
}