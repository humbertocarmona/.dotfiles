# Synctex

set synctex true
set synctex-editor-command "nvim --headless +'call cursor(%{line}, %{column})' %{input}"
# set synctex-editor-command "nvr --remote-silent +%{line} %{input}"
# set synctex-editor-command "nvim --remote-silent +%{line} %{input}"


# Basic Settings

# set highlight-transparency .4
set zoom-center "true"
set selection-clipboard clipboard
# set render-loading "false"
set render-loading              "true"
set render-loading-bg           "#0b0e14" # bg
set render-loading-fg           "#e5e1cf" # fg

set window-width 1120
set window-height 780
# set window-height 980
set adjust-open "width"
set window-title-basename true
set window-title-page true
set statusbar-basename true
set guioptions n
set recolor                     false
set recolor-keephue             true      # keep original color

map <Space> toggle_index
map K zoom in
map J zoom out
map p print
map w recolor
