{
    "settingsSync.keybindingsPerPlatform": true,
    "workbench.colorCustomizations": {
        "[Kanagawa]": {
            "tab.border": "#928962",
            "panel.border": "#928962",
            "terminal.border": "#928962",
            "editorGroup.border": "#928962",
            "editorInfo.border": "#928962",
            "sideBar.border": "#928962",
        },
        "[Tokyo Night]": {
            "tab.border": "#627792",
            "panel.border": "#627792",
            "terminal.border": "#627792",
            "editorGroup.border": "#627792",
            "editorInfo.border": "#627792",
            "sideBar.border": "#627792",
            "editor.selectionBackground": "#313c4eff"
        }
    },
    "editor.tokenColorCustomizations": {
        "[Tokyo Night]": {
            "comments": "#627792"
        }
    },
    "workbench.colorTheme": "Tokyo Night",
    "editor.fontFamily": "JetBrainsMono Nerd Font Mono",
    "editor.fontLigatures": true,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt"
    ],
    "julia.symbolCacheDownload": true,
    "[python]": {
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.defaultColorDecorators": "never",
        "editor.formatOnType": true,
        "editor.wordBasedSuggestions": "off",
        "files.autoSave": "afterDelay",
        "files.autoSaveDelay": 500
    },
    "[julia]": {
        "editor.defaultColorDecorators": "never",
        "editor.quickSuggestions": {
            "other": "on",
            "comments": "off",
            "strings": "off"
        },
        "editor.wordSeparators": "`~#$%^&*()-=+[{]}\\|;:'\",.<>/?",
        "files.autoSave": "afterDelay",
        "files.autoSaveDelay": 500,
        "editor.defaultFormatter": "0h7z.vscode-julia-format",
        "editor.unicodeHighlight.ambiguousCharacters": false,
    },
    "julia.cellDelimiters": [
        "^\\s?#\\s#+",
        "^##(?!#)",
        "^#(\\s?)%%",
        "^#-",
        "^# %%"
    ],
    "color-highlight.markerType": "dot-before",
    "julia.enableCrashReporter": true,
    "editor.minimap.enabled": false,
    "julia.enableTelemetry": true,
    "git.autofetch": true,
    "julia.execution.codeInREPL": true,
    "editor.formatOnSave": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "cSpell.language": "en,pt,pt_BR",
}