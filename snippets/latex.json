{
    "Insert figure": {
        "prefix": "ifig",
        "body": [
            "\\begin{figure}[ht]",
            "    \\centering",
            "    \\includegraphics[width = $2\\textwidth]{$1}",
            "    \\caption{$3}\\label{fig:$0}",
            "\\end{figure}"
        ],
        "description": "insert figure"
    },
    "Insert Citation": {
        "prefix": "icite",
        "body": "$1~\\cite{$0}",
        "description": "insert citation"
    },
    "Inline math": {
        "prefix": "imath",
        "body": "\\($0\\)",
        "description": "insert inline math"
    },
    "Reference equation": {
        "prefix": "eq.",
        "body": "Eq.~\\eqref{eq:$1}$0",
        "description": "insert reference to equation"
    },
    "Reference figure": {
        "prefix": "fig.",
        "body": "Fig.~\\ref{fig:$1}$0",
        "description": "insert reference to figure"
    }
}
